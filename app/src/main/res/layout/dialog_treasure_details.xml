<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/detail_treasure_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/detail_treasure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        tools:text="Legendary Artifact"/>

    <TextView
        android:id="@+id/detail_treasure_rarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        tools:text="LEGENDARY"/>

    <TextView
        android:id="@+id/detail_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        tools:text="Luffy"/>

    <TextView
        android:id="@+id/detail_character_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        tools:text="Description"/>

    <TextView
        android:id="@+id/detail_character_devil_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        tools:text="Devil Fruit: Gomu Gomu no Mi"/>

    <TextView
        android:id="@+id/detail_character_crew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        tools:text="Crew: Straw Hat Pirates"/>

    <TextView
        android:id="@+id/detail_character_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        tools:text="Job: Captain"/>

    <TextView
        android:id="@+id/detail_character_bounty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        tools:text="Bounty: 1,500,000,000 Berries"/>

</LinearLayout>
